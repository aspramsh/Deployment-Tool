@model DeploymentTool.Models.PathsModel

@{
    ViewData["Title"] = "Paths";
}

<h2>Paths</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PathsModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                <input asp-for="Solution" class="form-control" />
                <span asp-validation-for="Solution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publish" class="control-label"></label>
                <input asp-for="Publish" class="form-control" />
                <span asp-validation-for="Publish" class="text-danger"></span>
            </div>
			<div class="form-group">
				<label asp-for="IISAppPoolName" class="control-label"></label>
				<input asp-for="IISAppPoolName" class="form-control" />
				<span asp-validation-for="IISAppPoolName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Target" class="control-label"></label>
				<select asp-for="Target" asp-items="Html.GetEnumSelectList<DeploymentTool.Models.TargetFramework>()" class="form-control"></select>
					<span asp-validation-for="Target" class="text-danger"></span>
			</div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
